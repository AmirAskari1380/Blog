<div class="form-group">
    <label for="title">Title</label>
    <input required type="text" name="title" id="title" class="form-control mb-3" value="<%= article.title %>">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control mb-3"><%= article.description%></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control mb-3"><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary mb-3">Cancel</a>
<button type="submit" class="btn btn-primary mb-3">Save</button>  